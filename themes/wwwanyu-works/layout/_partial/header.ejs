<header class="sticky-top p-2">
  <h1 class="d-flex justify-content-between align-items-center">
    <a href="<%- url_for() %>"><%= config.title %></a>
    <small class="h6 text-muted">
      <% if (theme.subtitle){ %>
      <%= theme.subtitle %>
      <% } %>
    </small>
  </h1>
  <nav class="d-flex">
    <% for (var i in theme.menu){ %>
    <a class="mr-2" href="<%- url_for(theme.menu[i]) %>"><%= i %></a>
    <% } %>
  </nav>
  <nav>
    <% if (theme.rss){ %>
    <a href="<%- url_for(theme.rss) %>" title="<%= __('rss_feed') %>"></a>
    <% } %>
  </nav>
</header>
